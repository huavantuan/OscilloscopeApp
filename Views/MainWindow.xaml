<Window xmlns:Class="OscilloscopeApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:OscilloscopeApp.Views"
        xmlns:vm="clr-namespace:OscilloscopeApp.ViewModels"
        xmlns:scottplot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        Title="Oscilloscope" Height="600" Width="900">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <DockPanel>
        <!-- COM Port Panel -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10">
            <ComboBox Width="100" ItemsSource="{Binding Serial.AvailablePorts}" SelectedItem="{Binding Serial.SelectedPort}" />
            <TextBox Width="80" Text="{Binding Serial.BaudRate}" Margin="5,0" />
            <Button Content="{Binding Serial.ConnectButtonText}" Command="{Binding Serial.ToggleConnectionCommand}" Width="100" />
        </StackPanel>

        <!-- Oscilloscope Plot -->
        <scottplot:WpfPlot x:Name="PlotControl" DockPanel.Dock="Top" Height="400" />

        <!-- Scroll Slider -->
        <Slider Minimum="0" Maximum="{Binding Scroll.MaxOffset}" Value="{Binding Scroll.CurrentOffset}" TickFrequency="1000" Margin="10" />
    </DockPanel>
</Window>
